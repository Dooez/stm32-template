{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cmake",
      "label": "CMake: build",
      "command": "build",
      "targets": [
          "ALL_BUILD"
      ],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "flash",
      "command": "st-flash",
      "args": [
        "write",
        "${workspaceFolderBasename}.bin",
        "0x8000000"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "dependsOn": "CMake: build",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Builds project and flashes firmware."

    },
    {
      "type": "shell",
      "label": "flash-openocd",
      "command": "echo \"program ${workspaceFolder}/build/${workspaceFolderBasename}.bin 0x08000000\" | telnet localhost 50002; true",
      "dependsOn": "CMake: build",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Builds project, connects to the openOCD server and flashes new firmware."

    },
    {
      "type": "shell",
      "label": "attach ST-Link",
      "command": "usbipd wsl attach --busid ((usbipd wsl list | Select-String \"ST\" | Select-String \"^[0-9]\") -split ' ')[0].substring(0) -d \"Ubuntu-22.04\"",
      "detail": "attaches ST-Link to Ubuntu 22.04"
    },
    {
      "type": "shell",
      "label": "dettach ST-Link",
      "command": "usbipd wsl detach --busid ((usbipd wsl list | Select-String \"ST\" | Select-String \"^[0-9]\") -split ' ')[0].substring(0)",
      "detail": "attaches ST-Link to Ubuntu 22.04"
    }
  ]
}
